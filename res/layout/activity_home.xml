<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.startupweekend.infect.HomeActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btn_inventory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_map"
        android:layout_below="@+id/btn_map"
        android:layout_marginTop="20dp"
        android:text="INVENTORY" />

    <Button
        android:id="@+id/btn_stats"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_inventory"
        android:layout_below="@+id/btn_inventory"
        android:layout_marginTop="24dp"
        android:text="STATS" />

    <Button
        android:id="@+id/btn_invite"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_stats"
        android:layout_below="@+id/btn_stats"
        android:layout_marginTop="24dp"
        android:text="INVITE" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_invite"
        android:layout_below="@+id/btn_invite"
        android:layout_marginTop="24dp"
        android:text="ABOUT" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="MAP" />

</RelativeLayout>